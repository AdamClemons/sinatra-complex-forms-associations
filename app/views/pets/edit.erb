<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
    
    <h3>Owner to Associate:</h3>
    <% @owners.each do |owner| %>
        <% # binding.pry %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id  %>" value="<%= owner.id  %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input>
        <br>
    <% end %>

    <h3>Create New Owner</h3>
    New Owner Name: <input type="text" name="owner[name]" id="owner_name">

    <input type="submit" value="Update Pet">
</form>
