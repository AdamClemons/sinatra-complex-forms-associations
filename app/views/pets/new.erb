<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
    Name: <input type="text" name="pet[name]" id="pet_name">
    <input type="submit" value="Create Pet">

    <h3>Owner to Associate:</h3>
    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id  %>" value="<%= owner.id  %>"><%= owner.name %></input>
        <br>
    <% end %>

    <h3>Create New Owner</h3>
    New Owner Name: <input type="text" name="owner[name]" id="owner_name">
</form>